<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Educacesso</title>
   
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
@{
    var viewBagQtdCurso = ViewBag.QuantidadeCurso;
}
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container">
            <header class="media-heading">
                <div class="pull-right">
                    @Html.Partial("_LoginPartial")
                    <br />
                    <br />
                    <br />
                    
                    <ul class="nav nav-pills">
                        @if (Request.IsAuthenticated)
                        {

                            <li class="active"><a href="~/Educacesso/Index">Home <span class="badge">42</span></a></li>
                            <li><a href="~/Gerenciar/MeusCursos">Meus Cursos <span class="badge">@viewBagQtdCurso</span></a></li>
                            <li><a href="#">Messages <span class="badge">3</span></a></li>

                        }
                        else
                        {
                            <li class="active"><a href="#">Home</a></li>
                            <li><a href="#">Sobre </a></li>
                            <li><a href="#">Contato </a></li>
                        }
                    </ul>
                </div>
                <div class="pull-left">
                    <div class="img-responsive">
                        <img src="~/Images/logoEducacesso.png" class="img-responsive" style="height: 110px; width: 340px" />
                    </div>
                    <p class="panel-title col-lg-10">Ensinando e aprendendo!</p>

                </div>



            </header>




        </div>
    </div>
    <div class="container body-content">


        <!--INICIO BODY ///////////////////////////////////////////////////////////////////////////////////////////-->
        @RenderBody()


        <br />
        <br/>
        <br />
        <br />
        <!-- FOOTER ///////////////////////////////////////////////////////////////////////////////////////////////-->
        <hr />
        
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
