@using (@Html.BeginForm())
{
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title"><strong>Pesquise cursos aqui!</strong> </h3>
        </div>
        <div class="panel-body">
            <form class="navbar-form navbar-left searchColor" role="search">
                <div class="form-group">
					<input type="text" id="txtSearch" name="searchTerm" class="form-control searchColor borderC" placeholder="Digite aqui...">
					<button type="submit" class="btn btn-default btnPesquisar">Buscar</button>
                </div>
               
            </form>
        </div>
    </div>




}

<br />
<br />
<br />
<br />

    <table class="table table-striped table-hover">
        <thead>
            <tr class="danger">

                <th>@Html.DisplayName("Nome") </th>
                <th>@Html.DisplayName("Resumo") </th>
                <th> </th>

            </tr>
        </thead>
     


        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome_Curso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resumo_Curso)
                </td>
                <td>

                    @Html.ActionLink("Ver Curso", "Index", "FazerCurso", new { id = item.CursoID }, null)

                </td>
            </tr>
        }

    </table>



@section Scripts{

<script src="~/Scripts/AutoComplete/jquery-ui.js"></script>
<link href="~/Content/jquery-ui.css" rel="stylesheet" />


<script type="text/javascript">
        $(function () {
            $('#txtSearch').autocomplete({
                source: '@Url.Action("GetCursos")',
                minLength: 2
            });
        });
</script>
}