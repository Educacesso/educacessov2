@model IEnumerable<Educacesso.MVC.ViewModels.CursoViewModel>

@{
	ViewBag.Title = "MeusCursos";

}

<br />
<br />
<br />
<br />
<br />
<br />
<div class="panel panel-default">
	<div class="panel-heading"><h2 id="MeusCursoH2">Meus Cursos</h2></div>
	<div class="panel-body">
		<p id="novaFonteP">Selecione um curso abaixo para gerenciar</p>
	</div>
</div>




<table class="table table-striped table-hover">
	<thead>
		<tr class="danger">

			<th>@Html.DisplayName("Nome") </th>
			<th>@Html.DisplayName("Resumo") </th>
			<th> </th>

		</tr>
	</thead>


	@foreach (var item in Model)
	{
		<tbody>
			<tr class="active">
				<td>
					@Html.DisplayFor(modelItem => item.Nome_Curso)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Resumo_Curso)
				</td>
				<td>


					@Html.ActionLink("Ver Curso", "Index", "FazerCurso", new { id = item.CursoID }, null)




				</td>
			</tr>
		</tbody>
	}

</table>

<ul class="pager">
	<li><a href="#">Previous</a></li>
	<li><a href="#">Next</a></li>
</ul>